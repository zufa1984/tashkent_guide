<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageOfObject"
            android:layout_width="0dp"
            android:layout_height="215dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/ObjectNameStyle"
                android:text="@string/object_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingLeft="8dp">

            <ImageView
                android:src="@drawable/address_icon"
                style="@style/IconStyle"/>

            <TextView
                android:id="@+id/address"
                style="@style/CategoryTextStyle"
                android:text="@string/address"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingLeft="8dp">

                <ImageView
                    android:src="@drawable/web_site_icon"
                    style="@style/IconStyle"/>

            <TextView
                android:id="@+id/webSite"
                style="@style/CategoryTextStyle"
                android:text="@string/web_site"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingLeft="8dp">

                <ImageView
                    android:src="@drawable/contacts_icon"
                    style="@style/IconStyle"/>

                <TextView
                    android:id="@+id/contacts"
                    style="@style/CategoryTextStyle"
                    android:text="@string/phone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingLeft="8dp">

                <ImageView
                    android:src="@drawable/work_time_icon"
                    style="@style/IconStyle"/>

                <TextView
                    android:id="@+id/workTime"
                    style="@style/CategoryTextStyle"
                    android:text="@string/work_time"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/info"
        style="@style/InformationTextStyle"
        android:text="@string/information"/>

</LinearLayout>